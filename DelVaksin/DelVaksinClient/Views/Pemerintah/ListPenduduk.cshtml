@model IEnumerable<DelVaksinClient.ServiceSemuaData.Penduduk>

@{
    ViewBag.Title = "Penduduk";
}
<style type="text/css">
    th {
        text-align: center;
    }
</style>

<div class="jumbotron" style="background-color: forestgreen">
    <h2 style="color: white; margin-top: -20px; margin-bottom: -15px;">Dafftar Penduduk Penerima Vaksin</h2>
</div>
<div style="background-color: whitesmoke">
    <div style="padding: 20px" class="table-responsive">
        <table id="example" class="order-column" style="width:100%">
            <thead style="background-color: deepskyblue">
                <tr>
                    <th>
                        NIK
                    </th>
                    <th>
                        Nama
                    </th>
                    <th>
                        Alamat
                    </th>
                    <th>
                        Jenis Kelamin
                    </th>
                    <th>
                        ID Vaksin
                    </th>
                    <th>
                        Nama Perawat
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    foreach (var v in @ViewBag.vaksin)
                    {
                        if (item.NIK == v.NIK)
                        {
                            <tr>
                                <th>
                                    @Html.DisplayFor(modelItem => item.NIK)
                                </th>
                                <th>
                                    @Html.DisplayFor(modelItem => item.nama)
                                </th>
                                <th>
                                    @Html.DisplayFor(modelItem => item.alamat)
                                </th>
                                @if (item.jenis_kelamin == "L")
                                {
                                    <th>
                                        Laki - Laki
                                    </th>
                                }
                                else
                                {
                                    <th>
                                        Perempuan
                                    </th>
                                }
                                <th>
                                    @v.ID_vaksin
                                </th>
                                <th>
                                    @v.nama_perawat
                                </th>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
    </div>
</div>
<br />
@section scripts{
    <script src="~/Content/js/jquery-3.5.1.js"></script>
    <script src="~/Content/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>
}
<link href="~/Content/css/jquery.dataTables.min.css" rel="stylesheet" />
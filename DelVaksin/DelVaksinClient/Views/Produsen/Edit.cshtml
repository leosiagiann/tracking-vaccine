@model DelVaksinClient.ServiceSemuaData.Vaksin

@{
    ViewBag.Title = "Edit";
}

<div class="jumbotron" style="background-color: seagreen">
    <h2 style="color: white; margin-top: -20px; margin-bottom: -15px;">Edit Vaksin</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <h4 style="font-weight: bold; padding-left: 10px">ID Vaksin ~ @Model.ID_vaksin</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.HiddenFor(model => model.ID_vaksin, new { htmlAttributes = new { @class = "form-control" } })

        <div class="form-group">
            @Html.Label("Nama Vaksin", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nama, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nama, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(model => model.status, new { htmlAttributes = new { @class = "form-control" } })

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Edit" class="btn btn-success" />
            </div>
        </div>
    </div>
}

<div>
    <a href="/Produsen/Index"><button class="btn btn-danger">Cancel</button></a>
</div>
<hr />
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
